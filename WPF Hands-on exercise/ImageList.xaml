<UserControl
    x:Class="HandsOnLab1.ImageList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <DataTemplate x:Key="ImageItem" DataType="{x:Type ListBoxItem}">
            <materialDesign:Card
                MaxWidth="{Binding ElementName=ctrImageSize, Path=Value}"
                Margin="4,4,0,0"
                Background="{DynamicResource PrimaryHueDarkBrush}"
                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                UniformCornerRadius="6">
                <Image Source="{Binding}" Stretch="Fill" />
            </materialDesign:Card>
        </DataTemplate>
    </UserControl.Resources>
    <DockPanel>
        <Slider
            x:Name="ctrImageSize"
            DockPanel.Dock="Top"
            Maximum="400"
            Minimum="50"
            Value="150" />

        <ListBox
            ItemTemplate="{StaticResource ImageItem}"
            ItemsSource="{Binding Path=Images}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

    </DockPanel>
</UserControl>
